<%= form_with model: [@pet, @physical], local: true  do |f| %>
  <% if physical.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(physical.errors.count, "error") %> prohibited this physical from being saved:</h2>

      <ul>
      <% physical.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <%= f.hidden_field :pet_id, value: @pet.id %>

  <div>
    <%= f.label :height %>
    <%= f.number_field :height, step: 0.1, min: 0 %>cm
  </div>

  <div>
    <%= f.label :weight %>
    <%= f.number_field :weight, step: 0.1, min: 0 %>kg
  </div>

  <div>
    <%= f.label :note %>
    <%= f.text_area :note %>
  </div>

  <div>
    <%= f.label :date %>
    <%= f.text_field :date, value: Time.zone.now.strftime("%Y/%m/%d") %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
